@using Ol4RentAPI.DTO;
@{SitioListadoDTO sitio = (SitioListadoDTO)@Session["sitio"];}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@(sitio != null ? sitio.Nombre : "Ol4RENT") - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Sitean.css")
        
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/Scripts/jquery-1.7.1.js")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <section id="login">
                    @Html.Partial("_LoginPartialAndroid")
                </section>
                <div class="header">
                    @Html.Partial("_HeaderPartialAndroid")
                </div>
                <section id="busqueda">
                    <!-- Form de Busqueda -->
                    <div class="busqueda-basica">
                    @using (Html.BeginForm("Buscar", "Bien")) {
                        @Html.ValidationSummary(true)
                        @Html.TextBox("query")
                        <BR>
                        <input type="submit" value="Buscar" name="Buscar" id="buscar" />
                    }
                    </div>
                    <div class="busqueda-avanzada">
                        @Html.ActionLink("Búsqueda avanzada", "BusquedaAvanzada", "Bien")
                    </div>
                </section>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - OL4RENT - TSI1, Grupo 6 - Edición Android</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>