@model IEnumerable<Ol4RentAPI.DTO.BienListadoDTO>

@{
    ViewBag.Title = "Populares";
}
<h2>Bienes Populares</h2>
<ul class="listado-bienes">
@foreach (Ol4RentAPI.DTO.BienListadoDTO item in Model) {
    <li>
        <div>
            <img src="@Url.Action("Foto", "Bien", new { idBien = @item.Id })" alt="@item.Titulo" height="80" />
            @Html.ActionLink(item.Titulo, "Details", "Bien", new { id=item.Id }, null)
            @if (item.MostrarMeGusta)
            {
            <input type="button" value="Me Gusta" id="like-@item.Id" onclick="javascript:like(@item.Id,@item.CantidadLikes);" />
            }
            <p id="likes-@item.Id">Likes: @item.CantidadLikes</p>
            <p>@Html.DisplayFor(modelItem => item.Descripcion)</p>
        </div>
    </li>
}
</ul>

